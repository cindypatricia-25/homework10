{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Road Crash in Australia from 1989 - 2024",
    "data": {
      "url": "js//australian-states (1).json",
      "format": {
        "type": "topojson",
        "feature": "australian-states"
      }
    },
    "transform": [
      {
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "url": "data//count by states.csv"
          },
          "key": "STATE_NAME",
          "fields": ["Count of Crash"]  
        }
      }
    ],
    "projection": {
      "type": "mercator"
    },
    "params": [
      {
        "name": "region_click",
        "select": "point"
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 1
        },
        "encoding": {
          "color": {
            "condition": {
              "param": "region_click",  
              "field": "Count of Crash",  
              "type": "quantitative",
              "scale": {"scheme": "blues"}
            },
            "value": "grey"  
          },
          "tooltip": [
            {"field": "properties.STATE_NAME", "title": "State"},
            {"field": "Count of Crash", "title": "Crash Count normalized by population"}
          ]
        }
      },
      {
        "data": {
          "values": [
            {"state": "Western Australia", "lon": 120.0, "lat": -25.0},
            {"state": "Northern Territory", "lon": 133.0, "lat": -20.0},
            {"state": "South Australia", "lon": 135.0, "lat": -30.0},
            {"state": "Queensland", "lon": 145.0, "lat": -20.0},
            {"state": "New South Wales", "lon": 147.0, "lat": -32.0},
            {"state": "Victoria", "lon": 144.0, "lat": -37.0},
            {"state": "Tasmania", "lon": 146.0, "lat": -42.0}
          ]
        },
        "mark": {
          "type": "text",
          "fontSize": 12,
          "fontWeight": "bold",
          "dy": 0,
          "color": "black"
        },
        "encoding": {
          "text": {"field": "state"},
          "longitude": {"field": "lon"},
          "latitude": {"field": "lat"}
        }
      }
    ]
  }
  